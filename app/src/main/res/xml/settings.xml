<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <CheckBoxPreference
        android:key="fahrenheit_degree"
        android:title="@string/fahrenheit_degree"/>

    <ListPreference
        android:key="refresh_period"
        android:defaultValue="Never"
        android:entries="@array/refresh_intervals"
        android:entryValues="@array/refresh_intervals_identifiers"
        android:title="@string/refresh_interval"/>

    <Preference
        android:key="current_city"
        android:title="Select city"
        android:summary="@string/current_city"
        />
</PreferenceScreen>
